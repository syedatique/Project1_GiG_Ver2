<div class="container">
  <div class="listing-all">
  <p><strong>Gig Name:</strong><%= schedule.gig.try(:name) %></p>
  <p><strong> Venue Name: </strong> <%= schedule.venue.try(:name) %></p>
  <p><strong>Schedule: </strong><%= schedule.human_readable_date %></p>
  
  <ul style="transform: skewX(-25deg)">
    <li><%= button_to('Show', schedule_path(schedule), method: :get)%></li>
    <li><%= button_to('Edit', edit_schedule_path(schedule), method: :get) if can? :manage, Schedule %></li>
    <li><%= button_to('Delete', schedule_path(schedule), method: :delete, data:{confirm: 'Delete the schedule? Are you sure?'}) if can? :delete, Schedule %></li>
    <!-- <p class="alert"> <%= alert %> </p> -->
  </ul><br>

</div>

</div>
